@model EohTest.Ui.Employment.Models.EmployeeModel

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script src="~/Scripts/Pages/Employees.js" type="text/javascript"></script>

<h2>Employees</h2>
<h4><a href="/candidate/Index">Choose Candidates</a></h4>
<form action="/Employee/DismissEmployee" method="post">
    <div>
        <select name="employeId" class="employeeList">
            @foreach (var employee in Model.Employees) 
            { 
                <option value="@employee.EmployeeId">@employee.Person.FirstName @employee.Person.LastName</option>
            }
        </select>
    </div>
    <input type="submit" class="deleteEmployeeButton" title="Delete Employee" value="Delete Employee" />
</form>
